<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.codeclan.com.javaandroidgamenoframework.GameActivity">

<SurfaceView
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:src="@drawable/up_white"
        android:layout_above="@+id/down"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/right"
        android:layout_toStartOf="@+id/right"
        android:src="@drawable/left_white" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/left"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/right_white" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignLeft="@+id/up"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/up"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/down_white" />

    </RelativeLayout>